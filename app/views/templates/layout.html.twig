<!DOCTYPE html>
<html lang="fr">
  {% block head %}
    <head>
      <meta charset="utf-8"/>
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
      <meta name="description" content=""/>
      <meta name="author" content=""/>
      <title>{{ title }}</title>
      <!-- Favicon-->
      <link rel="icon" type="image/x-icon" href="public/assets/favicon.ico"/>
      <!-- font-awesome icon-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

      <!-- Core theme CSS (includes Bootstrap)-->
      <link href="public/css/booststrapStyles.css" rel="stylesheet"/>
      <link href="public/css/myStyles.css" rel="stylesheet"/>
    </head>
  {% endblock %}
  <body>

    <!-- Responsive navbar-->
    <nav id="myNavStyles" class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand" href="http://localhost/mon-blog/">Mon Blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link {% if page == 'home' %}active{% endif %}" href="http://localhost/mon-blog/">Accueil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {% if page == 'posts' %}active{% endif %}" href="http://localhost/mon-blog/posts">Articles</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {% if page == 'contact' %}active{% endif %}" href="http://localhost/mon-blog/contact">Contact</a>
            </li>
            {% if user is defined and user is not null %}
              <li class="nav-item">
                <a class="nav-link" href="http://localhost/mon-blog/logout">
                  <i class="fa fa-sign-out" aria-hidden="true">
                    logout</i>
                </a>
              </li>
            {% else %}
              <li class="nav-item">
                <a class="nav-link {% if page == 'login' %}active{% endif %}" href="http://localhost/mon-blog/login">
                  <i class="fa fa-sign-in" aria-hidden="true">
                    login</i>
                </a>
              {% endif %}

            </li>
          </ul>
        </div>
      </div>
    </nav>
    {% if user is defined and user is not null %}
      <div class="welcomeCard text-center">
        <h4 class="card-header">
          Bonjour
          {{ user.userName }}
          !
        </h4>
      </div>
    {% endif %}

    <!-- Page header with logo and tagline-->
    {% block header %}
      <header class="py-5 bg-light border-bottom">
        <div class="container">
          <div class="text-center my-5">
            <h1 class="fw-bolder">{{ block('header_title') }}</h1>
            <p class="lead mb-0">{{ block('header_description') }}</p>
          </div>
        </div>
      </header>
    {% endblock %}

      <!-- Content section -->
      {% block content %}{% endblock %}

      <!-- Footer -->
      <footer class="py-5 bg-dark">
        <div class="container text-center">
          <p class="m-0 text-center text-white">
            Copyright &copy; dmdprod 2023
          </p>
          <div>
            <a class="m-0 text-center text-white" href="#">Politique De Confidentialit√©</a>
            <a class="m-0 text-center text-white">|</a>
            <a class="m-0 text-center text-white" href="#">Terms &amp; Conditions D'utilisation</a>
          </div>
        </div>
      </footer>
      {% block JsLink %}
        <!-- Bootstrap core JS-->
        <!-- Core theme JS-->
        <script src="public/js/boostrapBundleMinScripts.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="public/js/passwordShow.js"></script>
      {% endblock %}

    </body>
  </html>
