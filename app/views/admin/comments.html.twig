{% extends 'templates/adminLayout.html.twig' %}
{% set page = 'comments' %}

{% block mainHeader %}
  <div class="container-fluid px-4">
    <div class="page-header-content">
      <div class="row align-items-center justify-content-between pt-3">
        <div class="col-auto mb-3">
          <h1 class="page-header-title">
            <div class="page-header-icon">
              <i data-feather="list"></i>
            </div>
            Commentaires
          </h1>
          <div class="page-header-subtitle">Mod√©rez ici les commentaires des internautes</div>
        </div>
        <div class="col-12 col-xl-auto mb-3">
          <a class="btn btn-sm btn-light text-primary" href="/../mon-blog/adminDashboard">
            <i class="me-1" data-feather="arrow-left"></i>
            Liste des Postes
          </a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block mainPageContent %}
  <div class="container px-4">
    <div class="col-auto m-3">
      <h1 class="page-header-title">
        <button class="btn btn-purple btn-icon" type="button">
            <i class="fas fa-flag"></i>
        </button>
          Listes des Commentaires
      </h1>
    </div>
    {% block content %}
      <div class="card card-header-actions">
        {% if comments %}
        {% for comment in comments %}
        <div class="card card-header-actions m-4">
          <div class="card-header nav-item dropdown no-caret dropdown-user"> 
            <div class="text-secondary"><i class="fa fa-user-circle text-dark" aria-hidden="true"></i>
            {{ comment.authorName }}</div>
            <a href="#" class="btn btn-danger btn-sm">Retirer</a>
          </div>
          <div class="card-body">
            {{ comment.content }}
          </div>
          <div class="card-footer">
            <div class="container"><small>Date :</small></div>
          </div>
        </div>
        {% endfor %}
        {% else %}
        <p>Pas de commentaires disponible</p>
        {% endif %}

        <!-- Pagination -->
        <nav aria-label="Pagination">
          <hr class="my-0"/>
          <ul class="pagination justify-content-center my-4">
            {% if currentPage > 1 %}
              <li class="page-item">
                <a class="page-link" href="/../mon-blog/adminDashboard/comments/{{ currentPage - 1 }}" tabindex="-1" aria-disabled="true">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            {% endif %}

            {% for page in 1..totalPages %}
              <li class="page-item {% if page == currentPage %}active{% endif %}" aria-current="page">
                <a class="page-link" href="/../mon-blog/adminDashboard/comments/{{ page }}">{{ page }}</a>
              </li>
            {% endfor %}

            {% if currentPage < totalPages %}
              <li class="page-item" aria-current="page">
                <a class="page-link" href="/../mon-blog/adminDashboard/comments/{{ currentPage + 1 }}">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            {% endif %}
          </ul>
        </nav>
      </div>
    {% endblock %}
  </div>
{% endblock %}
