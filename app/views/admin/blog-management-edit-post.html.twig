{% extends 'templates/adminLayout.html.twig' %}
{% set page = 'edit-post' %}

{% block mainHeader %}
  <div class="container-fluid px-4">
    <div class="page-header-content">
      <div class="row align-items-center justify-content-between pt-3">
        <div class="col-auto mb-3">
          <h1 class="page-header-title">
            <div class="page-header-icon">
              <i data-feather="file-text"></i>
            </div>
            Modifier un Post
          </h1>
          <div class="page-header-subtitle">Modifiez vos posts via le formulaire ci-dessous</div>
        </div>
        <div class="col-12 col-xl-auto mb-3">
          <a class="btn btn-sm btn-light text-primary" href="/../mon-blog/adminDashboard">
            <i class="me-1" data-feather="arrow-left"></i>
            Liste des Posts
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
{% endblock %}
{% block mainPageContent %}
<!-- Main page content-->
<div class="container-fluid px-4">
  <form class="row gx-4 mt-2" method="POST" enctype="multipart/form-data">
    {% if post is empty %}
      {% if success is defined %}
        <div class="alert alert-success" role="alert">
          {{ success }}
        </div>
      {% endif %}
    {% else %}
      {% if post %}
        <div class="col-lg-8 mb-4">

          <div class="card card-header-actions mb-4">
            <div class="card-header">
              Catégorie du Post
              <i class="text-muted" data-feather="info" data-bs-toggle="tooltip" data-bs-placement="left" title="Veuillez choisir la catégorie corespondante dans la liste"></i>
            </div>
            <div class="card-body">
              <select class="form-select" name="category" required="required">
                <option></option>
                {% for category in categories %}
                  <option value="{{ category.id }}">{{ category.id }}
                    -
                    {{ category.name }}
                  </option>
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-header">Titre du Post</div>
            <div class="card-body"><input class="form-control" id="postTitleInput" type="text" name="title" required="required" value="{{ post.title }}"/></div>
          </div>
          <div class="card card-header-actions mb-4">
            <div class="card-header">
              Aperçu du Post
              <i class="text-muted" data-feather="info" data-bs-toggle="tooltip" data-bs-placement="left" title="petit extrait du post"></i>
            </div>
            <div class="card-body">
              <textarea class="form-control" id="postpreview" name="postPreview" rows="3" required="required">{{ post.postpreview }}</textarea>
            </div>
          </div>
          <div class="card card-header-actions mb-4">
            <div class="card-header">
              Image Principal du Post
              <i class="text-muted" data-feather="info" data-bs-toggle="tooltip" data-bs-placement="left" title="L'image de couverture du Post en format JPEG"></i>
            </div>
            <div class="card-body">
              <input type="file" name="postImage" class="form-control" id="inputGroupFile" required="required" placeholder="Format Jpg requis*" title="Veuillez importer une image jpeg (* format .jpg)" accept=".jpg" value="{{ post.imageUrl }}">
                <img class="img-account-profile m-2" src="/../mon-blog/public/assets/img/postImg/{{ post.imageUrl }}" alt="post image"/></input>
              <label for="postImage" class="file-label">
                <small class="text-muted">Format requis : (* .jpg)</small>
              </label>
            </div>
          </div>
          <div class="card card-header-actions mb-4 mb-lg-0">
            <div class="card-header">
              Contenu du Post
              <i class="text-muted" data-feather="info" data-bs-toggle="tooltip" data-bs-placement="left" title="Contenu du post (tous les paragraphes etc)"></i>
            </div>
            <div class="card-body">
              <textarea class="form-control" id="contenu" name="content" rows="20" required="required">{{ post.content }}</textarea >
            </div>
          </div>

        </div>
      {% endif %}
      <div class="container col-lg">
        <div class="card card-header-actions">
          <div class="card-header">
            Publier
            <i class="text-muted" data-feather="info" data-bs-toggle="tooltip" data-bs-placement="left" title="Après publication votre poste serait visible sur le blog dans la page Atricle"></i>
          </div>
          <div class="card-body">
            <div class="container d-grid col-lg-6">
              <button type="submit" class="fw-500 btn btn-primary">Publier</button>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

  </form>
</div>
{% endblock %}
