{% extends 'templates/layout.html.twig' %}

{% block head %}
    <head>
        <meta charset="utf-8" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>{{ title }}</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="../public/assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="../public/css/styles.css" rel="stylesheet" />
    </head>
{% endblock %}

{% block header_title %}
   {{ post.title }}
{% endblock %}

{% block header_description %}
    {# Découvrez nos derniers articles et restez informé de nos activités. #}
{% endblock %}

{% block content %}
    <div class="container-fluid p-0">
    <img class="card-img-top" src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="..." />
        <div class="container mt-5">
            {% if post %}
                <div class="mb-4">
                    <h3 class="card-title"> {{ post.title }}</h3>
                    <div class="card-body">
                        <p class="card-text">{{ post.content }}</p>
                        <div class="small text-muted">Date de publication: {{ post.createdAt }}</div>
                        <div class="small text-muted">Date de mise à jour: {{ post.updatedAt }}</div>
                        <br>
                        <blockquote class="blockquote mb-0">
                            <footer class="blockquote-footer">Auteur :
                                <cite title="Source Title">{{ post.authorId }}</cite>
                            </footer>
                        </blockquote>
                    </div>
                </div>

                <form class="mt-5">
                    <div class="mb-3">
                        <label for="validationTextarea" class="form-label">Laissez nous votre commentaire</label>
                        <textarea class="form-control" id="validationTextarea" placeholder="Laissez nous votre commentaire ici" required></textarea>
                        <a class="btn btn-success mt-2">Envoyer</a>
                    </div>
                </form>
            {% endif %}

            {# {% else %} #}
            {% if comment %}

                <div class="list-group mb-3">
                    <div class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ comment.authorId }}</h5>
                        <small class="text-body-secondary">{{ post.id }}</small>
                        </div>
                        <p class="mb-1">{{ comment.content }}</p>
                        <small class="text-body-secondary">{{ comment.createdAt }}</small>
                    </div>
                </div>
            {% else %}
                <p>Aucun article ou commentaires disponible.</p>
            {% endif %}
        </div>
    </div>
    {% block JsLink %}
        <!-- Core theme JS-->
        <script src="../public/js/scripts.js"></script>
    {% endblock %}
{% endblock %}



