{% extends 'templates/layout.html.twig' %}

{% block head %}
  <head>
    <meta charset="utf-8"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>{{ title }}</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="../public/assets/favicon.ico"/>

    <!-- font-awesome icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="../public/css/booststrapStyles.css" rel="stylesheet"/>
    <link href="../public/css/myStyles.css" rel="stylesheet"/>
  {% endblock %}

  {% block header_title %}
    {{ post.title }}
  {% endblock %}

  {% block header_description %}
    {# Découvrez nos derniers articles et restez informé de nos activités. #}
  {% endblock %}

  {% block content %}
    <div class="container-fluid p-0">
      <img class="card-img-top" src="http://localhost/mon-blog/public/assets/img/postImg/{{ post.imageUrl }}" alt="Post image"/>
      <div class="container mt-5">
        {% if post %}
          <div class="mb-4">
            <h3 class="card-title">
              {{ post.title }}</h3>
            <div class="card-body">
              <p class="card-text">{{ post.content }}</p>
              <div class="small text-muted">Date de publication:
                {{ post.createdAt }}</div>
              <div class="small text-muted">Date de mise à jour:
                {{ post.updatedAt }}</div>
              <br>
              <blockquote class="blockquote mb-0">
                <footer class="blockquote-footer">Auteur :
                  <cite title="Source Title">{{ post.authorRole }}</cite>
                </footer>
              </blockquote>
            </div>
          </div>

          {% if user is defined and user is not null %}
            <form class="mt-5" method="POST">
              <div class="mb-3">
                <label for="validationTextarea" class="form-label">Laissez nous votre commentaire</label>
                <input type="hidden" name="article_id" value="{{ post.id }}">
                <textarea class="form-control" id="validationTextarea" name="content" rows="3" cols="50" placeholder="Ajouter un commentaire" required="required"></textarea>
                <button type="submit" class="btn btn-success mt-2" value="Envoyer">Envoyer</button>
              </div>
            </form>
          {% else %}
            <p>Pour laissez nous votre commentaire vous devez être connecté ! Si non inscrivez vous pour vous connecter celà vous prendra 2 min</p>
            <a href="http://localhost/mon-blog/login" class="btn btn-success btn-sm">Je me connecte</a>
            <a href="http://localhost/mon-blog/register" class="btn btn-secondary btn-sm">Je suis nouveau</a>

          {% endif %}
        {% endif %}

  {% if comments %}
    <div class="container mt-5">
      <h5 class="text-body-secondary">
        {{ comments|length }} Commentaires pour ce post
      </h5>
    </div>
  {% for comment in comments %}
    <div class="col-lg-6 col-md col-sm list-group m-4">
      <div class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{ comment.authorName }}</h5>
            <small class="text-body-secondary">{{ comment.authorName }}</small>
          </div>
        <p class="mb-1">{{ comment.content }}</p>
        <small class="text-body-secondary">Commentaire ajouté le :
          {{ comment.createdAt }}</small>
      </div>
    </div>
  {% endfor %}
{% else %}
  <p>0 commentaire pour ce post. Nous apprécions vos retours</p>
{% endif %}

      </div>
    </div>
  {% endblock %}

  {% block JsLink %}
    <!-- Core theme JS-->
    <script src="../public/js/scripts.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="public/js/passwordShow.js"></script>
  {% endblock %}
